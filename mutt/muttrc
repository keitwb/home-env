set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates
set ssl_force_tls = yes
set move = no
unset imap_passive
set imap_keepalive = 900
set mail_check = 40
set fast_reply = yes
set include = yes
set confirmappend = no
set delete = yes
set text_flowed = yes
set alias_file = ~/.mutt/aliases

folder-hook 'quoininc.com' 'source ~/.mutt/account.quoin'
folder-hook 'keitwb' 'source ~/.mutt/account.personal'
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/account.personal<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/account.quoin<enter><change-folder>!<enter>'
# switch to personal account on startup
source ~/.mutt/account.personal

set sort=threads
set sort_browser=reverse-date
set sort_aux=reverse-last-date-received

set date_format="%m-%d-%Y %T"
set index_format="%2C | %Z [%d] %-30.30F (%-4.4c) %s"

set sleep_time = 0
set smart_wrap
set pager_stop = yes
set menu_scroll = yes
set pager_index_lines = 5
set narrow_tree = yes
set ts_enabled = yes
set send_charset="utf-8"

set mailcap_path = ~/.mutt/mailcap
auto_view text/html
alternative_order text/plain text/html

## Custom Key Bindings
#
bind pager  previous-line
bind pager [ previous-page
bind pager ] next-page
bind pager j next-line
bind pager k previous-line

source ~/.mutt/color
