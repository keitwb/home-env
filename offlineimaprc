[general]
accounts = Personal, Quoin
socktimeout = 10
maxsyncaccounts = 3
ui = basic


[Account Personal]
localrepository = gmail-personal-local
remoterepository = gmail-personal-remote
labelsheader = X-Keywords
synclabels = yes
status_backend = sqlite
autorefresh = 2
quick = 30

[Repository gmail-personal-remote]
type = Gmail
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail', '[Gmail]/Important']
maxconnections = 5
remoteuser = keitwb@gmail.com
remotepassfile = ~/.mutt/secret.imap.personal
expunge = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = lambda f: f.replace('[Gmail]/', '')
auth_mechanisms = LOGIN

[Repository gmail-personal-local]
type = GmailMaildir
localfolders = ~/Mail/personal
nametrans = lambda f: "[Gmail]/%%s" %% f if f in ['Trash', 'Drafts', 'Spam', 'Sent Mail', 'Important', 'Starred'] else f


[Account Quoin]
localrepository = gmail-quoin-local
remoterepository = gmail-quoin-remote
labelsheader = X-Keywords
synclabels = yes
status_backend = sqlite
autorefresh = 2
quick = 30

[Repository gmail-quoin-local]
type = GmailMaildir
localfolders = ~/Mail/quoin
nametrans = lambda f: "[Gmail]/%%s" %% f if f in ['Trash', 'Drafts', 'Spam', 'Sent Mail', 'Important', 'Starred'] else f

[Repository gmail-quoin-remote]
type = Gmail
maxconnections = 5
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail', '[Gmail]/Important']
remoteuser = bkeith@quoininc.com
remotepassfile = ~/.mutt/secret.imap.quoin
expunge = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = lambda f: f.replace('[Gmail]/', '')
auth_mechanisms = LOGIN


[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

